<?xml version="1.0" encoding="utf-8" ?>
<Frame xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       x:Class="FScruiser.Maui.Controls.ErrorCountTag"
       Padding="2"
       BackgroundColor="{StaticResource attention}"
       Style="{StaticResource FrameBase}">
    <Label TextColor="{StaticResource text.dark}"
           VerticalTextAlignment="Center"
           HorizontalOptions="Center">
        <Label.FormattedText>
            <FormattedString>
                <Span Style="{StaticResource Span.ErrorIcon}" />
                <Span Text=" " />
                <Span x:Name="PART_errorCountSpan" />
            </FormattedString>
        </Label.FormattedText>
    </Label>
</Frame>
