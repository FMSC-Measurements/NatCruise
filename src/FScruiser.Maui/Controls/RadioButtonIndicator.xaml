<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:const="clr-namespace:FScruiser.Maui.Constants"
             x:Class="FScruiser.Maui.Controls.RadioButtonIndicator"
             x:Name="_control">
    <Image x:Name="PART_Indicator" 
           VerticalOptions="Center"
           HorizontalOptions="Center">
        <Image.Triggers>
            <DataTrigger TargetType="Label"
                         Binding="{Binding IsChecked, Source={Reference _control}}"
                         Value="True">
                <Setter Property="Text"
                        Value="{FontImage Glyph={Static const:FAIcons.CircleDot},  FontFamily={Static const:Fonts.FAsolid}, Size={StaticResource fontSize.H3}}" />
            </DataTrigger>
        </Image.Triggers>
    </Image>
</ContentView>
