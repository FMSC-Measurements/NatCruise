<?xml version="1.0" encoding="utf-8" ?>
<controls:BasePage xmlns:controls="clr-namespace:FScruiser.Maui.Controls"
                   xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                   xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                   xmlns:compat="clr-namespace:Microsoft.Maui.Controls.Compatibility;assembly=Microsoft.Maui.Controls"
                   xmlns:converters="clr-namespace:FScruiser.Maui.Converters"
                   xmlns:local_behaviors="clr-namespace:FScruiser.Maui.Behaviors"
                   xmlns:effects="clr-namespace:FScruiser.Maui.Effects"
                   xmlns:core_vms="clr-namespace:NatCruise.MVVM.ViewModels;assembly=NatCruise.Core"
                   xmlns:bp_ctrls="clr-namespace:Backpack.Maui.Controls;assembly=Backpack.Maui"
                   xmlns:mct="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
                   xmlns:effects1="http://xamarin.com/schemas/2020/toolkit"
                   xmlns:models="clr-namespace:NatCruise.Models;assembly=NatCruise.Core"
                   xmlns:data="clr-namespace:FScruiser.Maui.Data"
                   xmlns:mvvm="clr-namespace:FScruiser.Maui.MVVM"
                   xmlns:vms="clr-namespace:FScruiser.Maui.ViewModels"
                   xmlns:const="clr-namespace:FScruiser.Maui.Constants"
                   x:Class="FScruiser.Maui.Views.TallyView"
                   x:Name="_page"
                   BackgroundColor="White"
                   Title="{Binding Title}"
                   AutomationProperties.IsInAccessibleTree="True"
                   AutomationProperties.Name="Tally Page">
    <ContentPage.Resources>
        <ResourceDictionary>


            <data:TallySettingsDataService x:Key="tallySettings" />

            <converters:PercentageToGridLengthConverter x:Key="percentageToGridLengthConverrter" />
            <converters:PercentageToGridLengthConverter Invert="True"
                                                        x:Key="invertedPercentageToGridLengthConverrter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.Content>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="6*" />
                <RowDefinition Height="4*" />
                <RowDefinition Height="Auto" />

                <!--<RowDefinition Height="{Binding TallyButtonTrayVerticalSize, Source={StaticResource tallySettings}, Converter={StaticResource invertedPercentageToGridLengthConverrter}}" />
                <RowDefinition Height="{Binding TallyButtonTrayVerticalSize, Source={StaticResource tallySettings}, Converter={StaticResource percentageToGridLengthConverrter}}" />
                <RowDefinition Height="Auto" />-->
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- tally feed -->
                <CollectionView Grid.Row="0"
                                Grid.RowSpan="2"
                                ItemsSource="{Binding TallyFeed}"
                                x:Name="_tallyFeedListView"
                                Focused="_tallyFeedListView_Focused"
                                SelectionMode="None"
                                ItemSizingStrategy="MeasureFirstItem"
                                ItemsUpdatingScrollMode="KeepLastItemInView"
                                AutomationProperties.IsInAccessibleTree="True"
                                AutomationProperties.Name="Tally Feed">

                    <CollectionView.Effects>
                        <effects:ViewLifecycleEffect Loaded="_tallyFeedListView_Loaded" />
                    </CollectionView.Effects>

                    <CollectionView.ItemTemplate>
                        <controls:TallyEntryTemplateSelector>

                            <!-- Counts Tally Entry Item Template-->
                            <controls:TallyEntryTemplateSelector.TallyEditTemplate>
                                <DataTemplate>

                                    <Frame BackgroundColor="{DynamicResource tallyCountEntryColor}"
                                           CornerRadius="5"
                                           BorderColor="White"
                                           Margin="2,5,2,0"
                                           Padding="0"
                                           AutomationProperties.IsInAccessibleTree="True"
                                           AutomationProperties.Name="Tally Entry Item">

                                        <Grid HeightRequest="50">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="50" />
                                            </Grid.RowDefinitions>

                                            <Grid.ColumnDefinitions>
                                                <!-- Icon -->
                                                <ColumnDefinition Width="40" />
                                                <!-- Pop Indicator -->
                                                <ColumnDefinition Width="150" />
                                                <!-- filler -->
                                                <ColumnDefinition Width="*" />
                                                <!-- counts and kpi -->
                                                <ColumnDefinition Width="Auto" />
                                                <!-- reason -->
                                                <ColumnDefinition Width="Auto" />
                                                <!-- Right margin -->
                                                <ColumnDefinition Width="50" />
                                            </Grid.ColumnDefinitions>

                                            <!-- Icon -->
                                            <Image Grid.Row="0"
                                                   Grid.Column="0"
                                                   Source="ic_counts_box_black_24dp.png" />

                                            <!-- pop indicator -->
                                            <controls:PopulationIndicator Grid.Row="0"
                                                                          Grid.Column="1"
                                                                          StratumCode="{Binding StratumCode}"
                                                                          SampleGroupCode="{Binding SampleGroupCode}"
                                                                          Species="{Binding SpeciesCode}"
                                                                          LiveDead="{Binding LiveDead}"
                                                                          Margin="5"
                                                                          HeightRequest="30"
                                                                          VerticalOptions="Center"
                                                                          HorizontalOptions="Start"
                                                                          FontSize="Small" />

                                            <!-- counts and kpi -->
                                            <StackLayout Grid.Row="0"
                                                         Grid.Column="3"
                                                         Orientation="Vertical">
                                                <!--Tree Counts-->
                                                <Label Text="{Binding TreeCount, StringFormat='{}Tree Count:{0}'}"
                                                       FontSize="Small"
                                                       VerticalTextAlignment="Center"
                                                       Margin="0" />

                                                <!--Kpi-->
                                                <Label Text="{Binding KPI, StringFormat='{}Kpi:{0}'}"
                                                       FontSize="Small"
                                                       VerticalTextAlignment="Center"
                                                       IsVisible="{Binding KPI, Converter={StaticResource intToBoolConverter}}"
                                                       Margin="0" />
                                            </StackLayout>

                                            <!--Reson-->
                                            <Label Grid.Row="0"
                                                   Grid.Column="4"
                                                   Text="{Binding Reason}"
                                                   FontSize="Small"
                                                   VerticalTextAlignment="Center" />
                                        </Grid>
                                    </Frame>
                                </DataTemplate>
                            </controls:TallyEntryTemplateSelector.TallyEditTemplate>

                            <!-- Tree Tally Entry Item Template-->
                            <controls:TallyEntryTemplateSelector.TreeItemTemplate>
                                <DataTemplate>
                                    <SwipeView Threshold="300">
                                        <SwipeView.LeftItems>
                                            <SwipeItem Text="Untally"
                                                       BackgroundColor="Red"
                                                       Command="{Binding BindingContext.UntallyCommand, Source={Reference _page}}"
                                                       CommandParameter="{Binding TallyLedgerID}"
                                                       AutomationProperties.IsInAccessibleTree="True"
                                                       AutomationProperties.Name="Untally Button" />
                                        </SwipeView.LeftItems>

                                        <Frame BackgroundColor="{Binding CountOrMeasure, Converter={StaticResource countMeasureToColorConverter}}"
                                               CornerRadius="5"
                                               Margin="2,5,2,0"
                                               Padding="0"
                                               AutomationProperties.IsInAccessibleTree="True"
                                               AutomationProperties.Name="Tree Item">
                                            <Frame.GestureRecognizers>
                                                <TapGestureRecognizer x:Name="_treeCellTappedGesture"
                                                                      Command="{Binding BindingContext.SelectTallyEntryCommand, Source={Reference _page}}"
                                                                      CommandParameter="{Binding .}"
                                                                      Tapped="_treeCellTappedGesture_Tapped"
                                                                      controls:TapGestureRecognizerHelper.EnableClickSound="True" />
                                            </Frame.GestureRecognizers>
                                            <Frame.Resources>
                                                <converters:GreaterThanZeroConverter x:Key="greaterThanZeroConverter" />
                                            </Frame.Resources>

                                            <Grid x:Name="_contentHost">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="50" />
                                                </Grid.RowDefinitions>

                                                <Grid.ColumnDefinitions>
                                                    <!-- icon -->
                                                    <ColumnDefinition Width="40" />
                                                    <!-- pop indicator -->
                                                    <ColumnDefinition Width="150" />
                                                    <!-- tree number -->
                                                    <ColumnDefinition Width="Auto" />
                                                    <!-- empty filler -->
                                                    <ColumnDefinition Width="*" />
                                                    <!-- count or measure -->
                                                    <ColumnDefinition Width="Auto" />
                                                    <!-- KPI -->
                                                    <ColumnDefinition Width="50" />
                                                    <!-- STM -->
                                                    <ColumnDefinition Width="Auto" />
                                                    <!-- errors and warnings -->
                                                    <ColumnDefinition Width="50" />
                                                    <!-- button -->
                                                    <ColumnDefinition Width="50" />
                                                </Grid.ColumnDefinitions>

                                                <Image Grid.Row="0"
                                                       Grid.Column="0"
                                                       Source="ic_pine_tree_box_black_24dp.png"
                                                       AutomationProperties.IsInAccessibleTree="False" />



                                                <controls:PopulationIndicator Grid.Row="0"
                                                                              Grid.Column="1"
                                                                              StratumCode="{Binding StratumCode}"
                                                                              SampleGroupCode="{Binding SampleGroupCode}"
                                                                              Species="{Binding SpeciesCode}"
                                                                              LiveDead="{Binding LiveDead}"
                                                                              Margin="5"
                                                                              HeightRequest="30"
                                                                              VerticalOptions="Center"
                                                                              HorizontalOptions="Start"
                                                                              FontSize="Small" />


                                                <!--Tree Number-->
                                                <Label Grid.Row="0"
                                                       Grid.Column="2"
                                                       Text="{Binding TreeNumber, StringFormat='{}Tree {0}'}"
                                                       TextColor="{StaticResource darkText}"
                                                       FontSize="30"
                                                       VerticalTextAlignment="Center"
                                                       HorizontalOptions="Start" />



                                                <!-- skip column 3 -->

                                                <!--Count Or Measure-->

                                                <StackLayout Grid.Row="0"
                                                             Grid.Column="4"
                                                             Orientation="Vertical">
                                                    <Label Text="C/M" />
                                                    <Label Text="{Binding CountOrMeasure}"
                                                           TextColor="{StaticResource darkText}" />
                                                </StackLayout>

                                                <!-- KPI -->
                                                <StackLayout Grid.Column="5"
                                                             Grid.Row="0"
                                                             Orientation="Vertical"
                                                             IsVisible="{Binding KPI, Converter={StaticResource greaterThanZeroConverter}}">
                                                    <Label Text="KPI"
                                                           FontSize="Small" />
                                                    <Label Text="{Binding KPI}"
                                                           FontAttributes="Bold" />
                                                </StackLayout>

                                                <!-- STM -->
                                                <Label Grid.Column="6"
                                                       WidthRequest="50"
                                                       Text="STM"
                                                       FontAttributes="Bold"
                                                       HorizontalTextAlignment="Center"
                                                       IsVisible="{Binding STM}" />

                                                <!--Error and warnings-->
                                                <StackLayout Grid.Row="0"
                                                             Grid.Column="7">

                                                    <Frame Padding="0"
                                                           CornerRadius="5"
                                                           BackgroundColor="Red"
                                                           VerticalOptions="Center"
                                                           IsVisible="{Binding ErrorCount, Converter={StaticResource greaterThanZeroConverter}}">
                                                        <StackLayout Orientation="Horizontal"
                                                                     Padding="0">
                                                            <Image Source="ic_error_outline_black_24dp.png"
                                                                   HeightRequest="18"
                                                                   AutomationProperties.IsInAccessibleTree="False" />
                                                            <Label Text="{Binding ErrorCount}"
                                                                   TextColor="Black"
                                                                   VerticalTextAlignment="Center"
                                                                   AutomationProperties.IsInAccessibleTree="False" />
                                                        </StackLayout>
                                                    </Frame>

                                                    <Frame Padding="0"
                                                           CornerRadius="5"
                                                           BackgroundColor="Gold"
                                                           VerticalOptions="Center"
                                                           IsVisible="{Binding WarningCount, Converter={StaticResource greaterThanZeroConverter}}">
                                                        <StackLayout Orientation="Horizontal"
                                                                     Padding="0">
                                                            <Image Source="ic_warning_black_24dp.png"
                                                                   HeightRequest="18"
                                                                   AutomationProperties.IsInAccessibleTree="False" />
                                                            <Label Text="{Binding WarningCount}"
                                                                   TextColor="Black"
                                                                   VerticalTextAlignment="Center"
                                                                   AutomationProperties.IsInAccessibleTree="False" />
                                                        </StackLayout>
                                                    </Frame>
                                                </StackLayout>

                                                <!-- show untally button-->
                                                <ImageButton Grid.Column="8"
                                                             BackgroundColor="Transparent"
                                                             Clicked="openUntallyButton_Clicked"
                                                             Source="ic_more_vert_black_24dp.png"
                                                             Padding="0,7"
                                                             HeightRequest="{StaticResource minTouchableHeight}"
                                                             VerticalOptions="Center"
                                                             AutomationProperties.IsInAccessibleTree="True"
                                                             AutomationProperties.Name="Show Item Actions Button" />

                                            </Grid>
                                        </Frame>

                                    </SwipeView>
                                </DataTemplate>
                            </controls:TallyEntryTemplateSelector.TreeItemTemplate>

                            <!-- Manual Tree Template -->
                            <controls:TallyEntryTemplateSelector.ManualTreeTemplate>
                                <DataTemplate>
                                    <Frame BackgroundColor="{StaticResource manualTreeColor}"
                                           CornerRadius="5"
                                           Margin="2,5,2,0"
                                           Padding="0"
                                           AutomationProperties.IsInAccessibleTree="True"
                                           AutomationProperties.Name="Tree Item">
                                        <Frame.GestureRecognizers>
                                            <TapGestureRecognizer x:Name="_treeCellTappedGesture"
                                                                  Command="{Binding BindingContext.SelectTallyEntryCommand, Source={Reference _page}}"
                                                                  CommandParameter="{Binding .}"
                                                                  Tapped="_treeCellTappedGesture_Tapped"
                                                                  controls:TapGestureRecognizerHelper.EnableClickSound="True" />
                                        </Frame.GestureRecognizers>
                                        <Frame.Resources>
                                            <converters:GreaterThanZeroConverter x:Key="greaterThanZeroConverter" />
                                        </Frame.Resources>

                                        <Grid x:Name="_contentHost">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="50" />
                                            </Grid.RowDefinitions>

                                            <Grid.ColumnDefinitions>
                                                <!-- icon -->
                                                <ColumnDefinition Width="40" />
                                                <!-- pop indicator -->
                                                <ColumnDefinition Width="150" />
                                                <!-- tree number -->
                                                <ColumnDefinition Width="Auto" />
                                                <!-- empty filler -->
                                                <ColumnDefinition Width="*" />
                                                <!-- count or measure -->
                                                <ColumnDefinition Width="Auto" />
                                                <!-- KPI -->
                                                <ColumnDefinition Width="50" />
                                                <!-- STM -->
                                                <ColumnDefinition Width="Auto" />
                                                <!-- errors and warnings -->
                                                <ColumnDefinition Width="50" />
                                                <!-- empty -->
                                                <ColumnDefinition Width="50" />
                                            </Grid.ColumnDefinitions>

                                            <Image Grid.Row="0"
                                                   Grid.Column="0"
                                                   Source="ic_pine_tree_box_black_24dp.png"
                                                   AutomationProperties.IsInAccessibleTree="False" />



                                            <controls:PopulationIndicator Grid.Row="0"
                                                                          Grid.Column="1"
                                                                          StratumCode="{Binding StratumCode}"
                                                                          SampleGroupCode="{Binding SampleGroupCode}"
                                                                          Species="{Binding SpeciesCode}"
                                                                          LiveDead="{Binding LiveDead}"
                                                                          Margin="5"
                                                                          HeightRequest="30"
                                                                          VerticalOptions="Center"
                                                                          HorizontalOptions="Start"
                                                                          FontSize="Small" />


                                            <!--Tree Number-->
                                            <Label Grid.Row="0"
                                                   Grid.Column="2"
                                                   Text="{Binding TreeNumber, StringFormat='{}Tree {0}'}"
                                                   TextColor="{StaticResource darkText}"
                                                   FontSize="30"
                                                   VerticalTextAlignment="Center"
                                                   HorizontalOptions="Start" />

                                            <!-- skip column 3 -->

                                            <!--Count Or Measure-->
                                            <StackLayout Grid.Row="0"
                                                         Grid.Column="4"
                                                         Orientation="Vertical">
                                                <Label Text="C/M" />
                                                <Label Text="{Binding CountOrMeasure}"
                                                       TextColor="{StaticResource darkText}" />
                                            </StackLayout>

                                            <!-- KPI -->
                                            <StackLayout Grid.Column="5"
                                                         Grid.Row="0"
                                                         Orientation="Vertical"
                                                         IsVisible="{Binding KPI, Converter={StaticResource greaterThanZeroConverter}}">
                                                <Label Text="KPI"
                                                       FontSize="Small" />
                                                <Label Text="{Binding KPI}"
                                                       FontAttributes="Bold" />
                                            </StackLayout>

                                            <!-- STM -->
                                            <Label Grid.Column="6"
                                                   WidthRequest="50"
                                                   Text="STM"
                                                   FontAttributes="Bold"
                                                   HorizontalTextAlignment="Center"
                                                   IsVisible="{Binding STM}" />

                                            <!--Error and warnings-->
                                            <StackLayout Grid.Row="0"
                                                         Grid.Column="7">

                                                <Frame Padding="0"
                                                       CornerRadius="5"
                                                       BackgroundColor="Red"
                                                       VerticalOptions="Center"
                                                       IsVisible="{Binding ErrorCount, Converter={StaticResource greaterThanZeroConverter}}">
                                                    <StackLayout Orientation="Horizontal"
                                                                 Padding="0">
                                                        <Image Source="ic_error_outline_black_24dp.png"
                                                               AutomationProperties.IsInAccessibleTree="False"
                                                               HeightRequest="18" />
                                                        <Label Text="{Binding ErrorCount}"
                                                               TextColor="Black"
                                                               VerticalTextAlignment="Center"
                                                               AutomationProperties.IsInAccessibleTree="False" />
                                                    </StackLayout>
                                                </Frame>

                                                <Frame Padding="0"
                                                       CornerRadius="5"
                                                       BackgroundColor="Gold"
                                                       VerticalOptions="Center"
                                                       IsVisible="{Binding WarningCount, Converter={StaticResource greaterThanZeroConverter}}">
                                                    <StackLayout Orientation="Horizontal"
                                                                 Padding="0">
                                                        <Image Source="ic_warning_black_24dp.png"
                                                               HeightRequest="18"
                                                               AutomationProperties.IsInAccessibleTree="False" />
                                                        <Label Text="{Binding WarningCount}"
                                                               TextColor="Black"
                                                               VerticalTextAlignment="Center"
                                                               AutomationProperties.IsInAccessibleTree="False" />
                                                    </StackLayout>
                                                </Frame>
                                            </StackLayout>

                                        </Grid>
                                    </Frame>
                                </DataTemplate>
                            </controls:TallyEntryTemplateSelector.ManualTreeTemplate>

                            <!-- Basic Tally Entry Item Template-->
                            <controls:TallyEntryTemplateSelector.BasicTemplate>
                                <DataTemplate>
                                    <SwipeView Threshold="300">
                                        <SwipeView.LeftItems>
                                            <SwipeItem Text="Untally"
                                                       BackgroundColor="Red"
                                                       Command="{Binding BindingContext.UntallyCommand, Source={Reference _page}}"
                                                       CommandParameter="{Binding TallyLedgerID}"
                                                       AutomationProperties.IsInAccessibleTree="True"
                                                       AutomationProperties.Name="Untally Button" />
                                        </SwipeView.LeftItems>

                                        <Frame BackgroundColor="White"
                                               CornerRadius="5"
                                               BorderColor="White"
                                               Margin="2,5,2,0"
                                               Padding="0">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="50" />
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <!-- icon -->
                                                    <ColumnDefinition Width="40" />
                                                    <!-- pop indicator -->
                                                    <ColumnDefinition Width="*" />
                                                    <!-- KPI -->
                                                    <ColumnDefinition Width="50" />
                                                    <!-- STM -->
                                                    <ColumnDefinition Width="Auto" />
                                                    <!-- show untally button-->
                                                    <ColumnDefinition Width="50" />
                                                </Grid.ColumnDefinitions>

                                                <Image Grid.Row="0"
                                                       Grid.Column="0"
                                                       Source="ic_tally_box_black_24dp.png"
                                                       AutomationProperties.IsInAccessibleTree="False" />

                                                <controls:PopulationIndicator Grid.Row="0"
                                                                              Grid.Column="1"
                                                                              StratumCode="{Binding StratumCode}"
                                                                              SampleGroupCode="{Binding SampleGroupCode}"
                                                                              Species="{Binding SpeciesCode}"
                                                                              LiveDead="{Binding LiveDead}"
                                                                              Margin="5"
                                                                              HeightRequest="30"
                                                                              VerticalOptions="Center"
                                                                              HorizontalOptions="Start"
                                                                              FontSize="Small" />

                                                <!-- KPI -->
                                                <StackLayout Grid.Column="2"
                                                             Grid.Row="0"
                                                             Orientation="Vertical"
                                                             IsVisible="{Binding KPI, Converter={StaticResource greaterThanZeroConverter}}">
                                                    <Label Text="KPI"
                                                           FontSize="Small" />
                                                    <Label Text="{Binding KPI}"
                                                           FontAttributes="Bold" />
                                                </StackLayout>

                                                <!-- STM -->
                                                <Label Grid.Column="3"
                                                       WidthRequest="50"
                                                       Text="STM"
                                                       FontAttributes="Bold"
                                                       HorizontalTextAlignment="Center"
                                                       IsVisible="{Binding STM}" />

                                                <!-- show untally button-->
                                                <ImageButton Grid.Column="4"
                                                             BackgroundColor="Transparent"
                                                             Clicked="openUntallyButton_Clicked"
                                                             Source="ic_more_vert_black_24dp.png"
                                                             Padding="0,7"
                                                             HeightRequest="{StaticResource minTouchableHeight}"
                                                             VerticalOptions="Center"
                                                             AutomationProperties.IsInAccessibleTree="True"
                                                             AutomationProperties.Name="Show Item Actions Button" />
                                            </Grid>
                                        </Frame>


                                    </SwipeView>
                                </DataTemplate>
                            </controls:TallyEntryTemplateSelector.BasicTemplate>
                        </controls:TallyEntryTemplateSelector>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <!--Tree Edit Panel-->
                <!--default to not visible, when view cell expands visibility will be set to true -->
                <Frame  x:Name="_treeEditPanel"
                        IsVisible="True"
                        Grid.Row="0"
                        compat:RelativeLayout.WidthConstraint="{compat:ConstraintExpression Type=RelativeToParent, Property=Width, Factor=1}"
                        Padding="0"
                        BackgroundColor="White"
                        BindingContext="{Binding SelectedTreeViewModel}"
                        AutomationProperties.IsInAccessibleTree="True"
                        AutomationProperties.Name="Tree Edit Panel"
                        BindingContextChanged="_treeEditPanel_BindingContextChanged">

                    <Grid>


                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="2" />
                        </Grid.RowDefinitions>



                        <AbsoluteLayout Grid.Row="0"
                                        Margin="0,5,0,0">

                            <Button AbsoluteLayout.LayoutBounds="0,0"
                                    AbsoluteLayout.LayoutFlags="PositionProportional"
                                    Text="Prev"
                                    Margin="5,0"
                                    Command="{Binding BindingContext.SelectPreviousTreeCommand, Source={Reference _page}}" />
                            <Label AbsoluteLayout.LayoutBounds=".5,0"
                                   AbsoluteLayout.LayoutFlags="PositionProportional"
                                   Text="{Binding TreeNumber, StringFormat='{}Tree Number {0}'}"
                                   TextColor="{StaticResource darkText}"
                                   FontSize="Large" />
                            <Button AbsoluteLayout.LayoutBounds="1,0"
                                    AbsoluteLayout.LayoutFlags="PositionProportional"
                                    Margin="5,0"
                                    Text="Next"
                                    Command="{Binding BindingContext.SelectNextTreeCommand, Source={Reference _page}}" />
                        </AbsoluteLayout>

                        <CollectionView Grid.Row="1"
                                        ItemsSource="{Binding TreeFieldValues}"
                                        SelectionMode="None"
                                        HeightRequest="75"
                                        Margin="0,5">
                            <CollectionView.ItemsLayout>
                                <LinearItemsLayout Orientation="Horizontal" />
                            </CollectionView.ItemsLayout>

                            <CollectionView.Resources>
                                <ResourceDictionary>
                                    <Style TargetType="controls:VerticalHeaderControl"
                                           x:Key="baseTreeFieldStyle">
                                        <!--<Setter Property="HeightRequest"
                                                Value="100" />-->
                                        <!--<Setter Property="LastChildHeight"
                                                Value="50" />-->
                                        <Setter Property="WidthRequest"
                                                Value="100" />
                                    </Style>

                                    <Style TargetType="controls:VerticalHeaderControl"
                                           x:Key="treeFieldValueStyle"
                                           BasedOn="{StaticResource baseTreeFieldStyle}">
                                        <Style.Triggers>
                                            <DataTrigger TargetType="controls:VerticalHeaderControl"
                                                         Binding="{Binding Error.Level}"
                                                         Value="{Static models:ErrorBase.LEVEL_WARNING}">
                                                <Setter Property="BackgroundColor"
                                                        Value="{StaticResource warning}" />
                                            </DataTrigger>
                                            <DataTrigger TargetType="controls:VerticalHeaderControl"
                                                         Binding="{Binding Error.Level}"
                                                         Value="{Static models:ErrorBase.LEVEL_ERROR}">
                                                <Setter Property="BackgroundColor"
                                                        Value="{StaticResource error}" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>

                                    <Style TargetType="controls:VerticalHeaderControl"
                                           x:Key="treeSepeciesFieldStyle"
                                           BasedOn="{StaticResource baseTreeFieldStyle}">
                                        <Style.Triggers>
                                            <DataTrigger TargetType="controls:VerticalHeaderControl"
                                                         Binding="{Binding HasSpeciesError}"
                                                         Value="True">
                                                <Setter Property="BackgroundColor"
                                                        Value="{StaticResource error}" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>

                                    <!-- defatult style -->
                                    <Style TargetType="controls:VerticalHeaderControl"
                                           BasedOn="{StaticResource treeFieldValueStyle}">
                                    </Style>

                                </ResourceDictionary>
                            </CollectionView.Resources>

                            <CollectionView.Header>
                                <!-- species -->

                                <!--<Grid WidthRequest="100">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>

                                    <Label Text="Species" />
                                    <bp_ctrls:ValuePicker Grid.Row="1" SelectedValue="{Binding SpeciesCode}"
                                                          ItemsSource="{Binding SpeciesOptions}" VerticalTextAlignment="End"/>
                                </Grid>-->

                                <controls:VerticalHeaderControl Header="Species">
                                    <bp_ctrls:ValuePicker SelectedValue="{Binding SpeciesCode}"
                                                          ItemsSource="{Binding SpeciesOptions}"
                                                          VerticalOptions="End" />
                                </controls:VerticalHeaderControl>

                                <!--<controls:HeaderControl Header="Species" 
                                                           Style="{StaticResource treeSepeciesFieldStyle}">
                                    <bp_ctrls:ValuePicker SelectedValue="{Binding SpeciesCode}"
                                                          ItemsSource="{Binding SpeciesOptions}"  />
                                </controls:HeaderControl>-->
                            </CollectionView.Header>

                            <CollectionView.ItemTemplate>
                                <controls:TreeFieldValueDataTemplateSelector>

                                    <!-- int template -->
                                    <controls:TreeFieldValueDataTemplateSelector.IntTemplate>
                                        <DataTemplate>
                                            <controls:VerticalHeaderControl Header="{Binding Heading}">
                                                <Entry Text="{Binding ValueInt}"
                                                       Placeholder="{Binding StrDefaultValue}"
                                                       Keyboard="Numeric"
                                                       ReturnType="Next">
                                                    <Entry.Behaviors>
                                                        <mct:SelectAllTextBehavior />
                                                    </Entry.Behaviors>
                                                    <Entry.IsReadOnly>
                                                        <MultiBinding Converter="{StaticResource AnyTrueConverter}">
                                                            <Binding Path="IsLocked" />
                                                            <Binding Path="IsHidden" />
                                                        </MultiBinding>
                                                    </Entry.IsReadOnly>
                                                </Entry>
                                            </controls:VerticalHeaderControl>
                                        </DataTemplate>
                                    </controls:TreeFieldValueDataTemplateSelector.IntTemplate>

                                    <!-- real template -->
                                    <controls:TreeFieldValueDataTemplateSelector.RealTemplate>
                                        <DataTemplate>
                                            <controls:VerticalHeaderControl Header="{Binding Heading}">
                                                <Entry Text="{Binding ValueReal}"
                                                       Placeholder="{Binding StrDefaultValue}"
                                                       Keyboard="Numeric"
                                                       ReturnType="Next">
                                                    <Entry.Behaviors>
                                                        <mct:SelectAllTextBehavior />
                                                    </Entry.Behaviors>
                                                    <Entry.IsReadOnly>
                                                        <MultiBinding Converter="{StaticResource AnyTrueConverter}">
                                                            <Binding Path="IsLocked" />
                                                            <Binding Path="IsHidden" />
                                                        </MultiBinding>
                                                    </Entry.IsReadOnly>
                                                </Entry>
                                            </controls:VerticalHeaderControl>
                                        </DataTemplate>
                                    </controls:TreeFieldValueDataTemplateSelector.RealTemplate>

                                    <!-- text template -->
                                    <controls:TreeFieldValueDataTemplateSelector.TextTemplate>
                                        <DataTemplate>
                                            <controls:VerticalHeaderControl Header="{Binding Heading}">
                                                <Entry Text="{Binding ValueText}"
                                                       Placeholder="{Binding StrDefaultValue}"
                                                       ReturnType="Next">
                                                    <Entry.Behaviors>
                                                        <mct:SelectAllTextBehavior />
                                                    </Entry.Behaviors>
                                                    <Entry.IsReadOnly>
                                                        <MultiBinding Converter="{StaticResource AnyTrueConverter}">
                                                            <Binding Path="IsLocked" />
                                                            <Binding Path="IsHidden" />
                                                        </MultiBinding>
                                                    </Entry.IsReadOnly>
                                                </Entry>
                                            </controls:VerticalHeaderControl>
                                        </DataTemplate>
                                    </controls:TreeFieldValueDataTemplateSelector.TextTemplate>

                                    <!-- Alt initial template. When cruisers initials are defined and we want to use a picker this template will be used
                                                otherwise the basic text template will be used for initials -->
                                    <controls:TreeFieldValueDataTemplateSelector.InitialsAltTemplate>
                                        <DataTemplate>
                                            <controls:VerticalHeaderControl Header="{Binding Heading}">
                                                <bp_ctrls:ValuePicker SelectedValue="{Binding ValueText}"
                                                                      ItemsSource="{Binding BindingContext.Cruisers, Source={Reference _treeFieldsLayout}}" />
                                            </controls:VerticalHeaderControl>
                                        </DataTemplate>
                                    </controls:TreeFieldValueDataTemplateSelector.InitialsAltTemplate>

                                    <!-- remarks template -->
                                    <controls:TreeFieldValueDataTemplateSelector.RemarksTemplate>
                                        <DataTemplate>
                                            <controls:VerticalHeaderControl Header="{Binding Heading}"
                                                                            WidthRequest="200">
                                                <ScrollView Orientation="Vertical"
                                                            HeightRequest="70">
                                                    <Editor Text="{Binding ValueText}"
                                                            AutoSize="TextChanges">
                                                    </Editor>
                                                </ScrollView>
                                            </controls:VerticalHeaderControl>
                                        </DataTemplate>
                                    </controls:TreeFieldValueDataTemplateSelector.RemarksTemplate>

                                    <controls:TreeFieldValueDataTemplateSelector.LiveDeadTemplate>
                                        <DataTemplate>
                                            <controls:VerticalHeaderControl Header="L/D">
                                                <bp_ctrls:ValuePicker SelectedValue="{Binding BindingContext.LiveDead, Source={Reference _treeFieldsLayout}}"
                                                                      ItemsSource="{Binding BindingContext.LiveDeadOptions, Source={Reference _treeFieldsLayout}}" />

                                            </controls:VerticalHeaderControl>
                                        </DataTemplate>
                                    </controls:TreeFieldValueDataTemplateSelector.LiveDeadTemplate>

                                    <controls:TreeFieldValueDataTemplateSelector.GradeTemplate>
                                        <DataTemplate>
                                            <controls:HeaderControl Header="Grade">
                                                <bp_ctrls:ValuePicker SelectedValue="{Binding ValueText}"
                                                                      ItemsSource="{Binding BindingContext.GradeOptions, Source={Reference _treeEditPanel}}" />

                                            </controls:HeaderControl>
                                        </DataTemplate>
                                    </controls:TreeFieldValueDataTemplateSelector.GradeTemplate>

                                </controls:TreeFieldValueDataTemplateSelector>
                            </CollectionView.ItemTemplate>

                        </CollectionView>

                        <Grid Grid.Row="2"
                              Margin="0,0,0,5">
                            <Grid.ColumnDefinitions>
                                <!-- hide button -->
                                <ColumnDefinition Width="*" />
                                <!-- logs button -->
                                <ColumnDefinition Width="Auto" />
                                <!-- edit button -->
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>


                            <Button  x:Name="_hideTreeEditPanelButton"
                                     Grid.Column="0"
                                     Margin="5,0"
                                     Text="Hide"
                                     HorizontalOptions="Start"
                                     Clicked="_hideTreeEditPanelButton_Clicked"
                                     AutomationProperties.IsInAccessibleTree="True"
                                     AutomationProperties.Name="Hide Tree Edit Panel Button" />

                            <Button Grid.Column="1"
                                    x:Name="_logsButton"
                                    Margin="5,0"
                                    Text="Logs"
                                    Command="{Binding ShowLogsCommand}"
                                    AutomationProperties.IsInAccessibleTree="True"
                                    AutomationProperties.Name="Logs Button" />

                            <Button Grid.Column="2"
                                    x:Name="_editButton"
                                    Margin="5,0"
                                    Text="Edit"
                                    Command="{Binding BindingContext.EditTreeCommand, Source={Reference _page}}"
                                    CommandParameter="{Binding TreeID}"
                                    AutomationProperties.IsInAccessibleTree="True"
                                    AutomationProperties.Name="Edit Tree Button" />
                        </Grid>

                        <BoxView Grid.Row="3"
                                 BackgroundColor="Black" />
                    </Grid>
                </Frame>
            </Grid>

            <!-- tally buttons -->
            <CollectionView Grid.Row="1"
                            Grid.Column="0"
                            x:Name="TallyListView"
                            ItemsSource="{Binding TalliesFiltered}"
                            BackgroundColor="Gray"
                            VerticalOptions="Fill"
                            Margin="3,0"
                            AutomationProperties.IsInAccessibleTree="True"
                            AutomationProperties.Name="Tally Population List">
                <CollectionView.ItemsLayout>
                    <GridItemsLayout Orientation="Vertical"
                                     Span="4"
                                     HorizontalItemSpacing="3"
                                     VerticalItemSpacing="3" />
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>

                        <Frame CornerRadius="5"
                               BackgroundColor="{StaticResource tallyButtonBgColor}"
                               Margin="3"
                               Padding="0"
                               AutomationProperties.IsInAccessibleTree="True"
                               AutomationProperties.Name="Tally Population Item">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding BindingContext.TallyCommand, Source={Reference _page}}"
                                                      CommandParameter="{Binding .}" />
                            </Frame.GestureRecognizers>

                            <Grid Padding="0">

                                <Grid.RowDefinitions>
                                    <!--Tally Settings Button-->
                                    <RowDefinition Height="Auto" />
                                    <!-- population info and menu button -->
                                    <RowDefinition Height="Auto" />
                                    <!-- tree count -->
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <!--Tally Settings Button-->
                                <ImageButton    x:Name="_showTallyMenuButton"
                                                Grid.Column="1"
                                                Grid.Row="0"
                                                Padding="10,3"
                                                HeightRequest="{StaticResource minTouchableHeight}"
                                                Command="{Binding BindingContext.ShowTallyMenuCommand, Source={Reference _page}}"
                                                Source="ic_more_vert_black_24dp.png"
                                                BackgroundColor="Transparent"
                                                CommandParameter="{Binding .}"
                                                AutomationProperties.IsInAccessibleTree="True"
                                                AutomationProperties.Name="Tally Menu" />

                                <controls:PopulationIndicator Grid.Column="0"
                                                              Grid.ColumnSpan="2"
                                                              Grid.Row="1"
                                                              StratumCode="{Binding StratumCode}"
                                                              SampleGroupCode="{Binding SampleGroupCode}"
                                                              Species="{Binding SpeciesCode}"
                                                              LiveDead="{Binding LiveDead}"
                                                              AltFontAttributes="Bold"
                                                              AltFontSize="Large"
                                                              FontSize="Micro"
                                                              HorizontalOptions="Center" />


                                <Frame  Grid.Column="0"
                                        Grid.Row="2"
                                        Grid.ColumnSpan="2"
                                        Padding="3,0"
                                        Margin="0,0,0,2"
                                        HorizontalOptions="Center"
                                        BackgroundColor="White"
                                        CornerRadius="5">

                                    <HorizontalStackLayout>
                                        <Image Source="ic_pine_tree_box_black_18dp.png"
                                               AutomationProperties.IsInAccessibleTree="False"
                                               HeightRequest="18"/>
                                        <Label Text="{Binding TreeCount}"
                                               HorizontalTextAlignment="Center"
                                               BackgroundColor="Transparent"
                                               TextColor="Black"
                                               AutomationProperties.IsInAccessibleTree="True"
                                               AutomationProperties.Name="Tree Count" />

                                        <Label Text="{Binding SumKPI, StringFormat='{}Kpi:{0}'}"
                                               TextColor="Black"
                                               IsVisible="{Binding SumKPI, Converter={StaticResource intToBoolConverter}}"
                                               AutomationProperties.IsInAccessibleTree="False"
                                               AutomationProperties.Name="Total KPI" />
                                    </HorizontalStackLayout>
                                </Frame>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- stratum selection -->
            <CollectionView Grid.Row="2"
                            Grid.Column="0"
                            x:Name="StratumFilterListView"
                            VerticalOptions="End"
                            HeightRequest="44"
                            Margin="2,1"
                            IsVisible="{Binding StrataFilterOptions, Converter={StaticResource isListNotNullOrEmptyConverter}}"
                            ItemsSource="{Binding StrataFilterOptions}"
                            AutomationProperties.IsInAccessibleTree="False"
                            AutomationProperties.Name="Stratum List">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Horizontal"
                                       ItemSpacing="2" />
                </CollectionView.ItemsLayout>

                <!--<CollectionView.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>Any</x:String>
                        <x:String>001</x:String>
                        <x:String>002</x:String>
                        <x:String>002</x:String>
                        <x:String>002</x:String>
                        <x:String>002</x:String>
                        <x:String>002</x:String>
                    </x:Array>
                </CollectionView.ItemsSource>-->

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Button Text="{Binding .}"
                                TextColor="{StaticResource white_90}"
                                BackgroundColor="{StaticResource usfs_green}"
                                Margin="2"
                                Padding="1"
                                HeightRequest="40"
                                MinimumWidthRequest="{StaticResource minTouchableWidth}"
                                Command="{Binding BindingContext.SetStratumFilterCommand, Source={x:Reference StratumFilterListView}}"
                                CommandParameter="{Binding .}" />
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>
    </ContentPage.Content>
</controls:BasePage>