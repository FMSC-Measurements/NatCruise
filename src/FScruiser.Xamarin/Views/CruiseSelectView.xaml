<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FScruiser.XF.Views.CruiseSelectView"
             x:Name="_page"
             Title="Select Cruise"
             AutomationProperties.IsInAccessibleTree="true"
             AutomationProperties.Name="Cruise Selection Page"
             AutomationProperties.HelpText="Select a Cruise From a List of Cruises">
    <ContentPage.Content>
        <StackLayout>
            <ListView ItemsSource="{Binding Cruises}"
                      SelectionMode="Single"
                      SelectedItem="{Binding SelectedCruise}"
                      AutomationProperties.IsInAccessibleTree="true"
                      AutomationProperties.Name="Cruise List"
                      AutomationProperties.HelpText="Tap Cruise Item to Mark as Selected. Then Tap an Action Button Below to Perform Action on Cruise.">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell  Text="{Binding .}"
                                   AutomationProperties.IsInAccessibleTree="true"
                                   AutomationProperties.Name="{Binding .}"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <Button Text="Open"
                    AutomationProperties.IsInAccessibleTree="true"
                    AutomationProperties.Name="Open Cruise Button"
                    AutomationProperties.HelpText="Opens The Selected Cruise"
                    Command="{Binding OpenSelectedCruiseCommand}"
                    IsEnabled="{Binding SelectedCruise, Converter={StaticResource isNotNullOrEmptyConverter}}" />
            <StackLayout Orientation="Horizontal"
                         HorizontalOptions="FillAndExpand">
                <Button Text="Export"
                        AutomationProperties.IsInAccessibleTree="true"
                        AutomationProperties.Name="Export Cruise Button"
                        AutomationProperties.HelpText="Exports The Selected Cruise to a New File on The Device"
                        Command="{Binding ExportSelectedCruiseCommand}"
                        IsEnabled="{Binding SelectedCruise, Converter={StaticResource isNotNullOrEmptyConverter}}"
                        HorizontalOptions="FillAndExpand" />
                <Button Text="Share"
                        AutomationProperties.IsInAccessibleTree="true"
                        AutomationProperties.Name="Share Cruise Button"
                        AutomationProperties.HelpText="Exports The Selected Cruise and Gives Options to Share The File"
                        Command="{Binding ShareSelectedCruiseCommand}"
                        IsEnabled="{Binding SelectedCruise, Converter={StaticResource isNotNullOrEmptyConverter}}"
                        HorizontalOptions="FillAndExpand" />
            </StackLayout>

            <Button Text="Delete"
                    AutomationProperties.IsInAccessibleTree="true"
                    AutomationProperties.Name="Delete Cruise Button"
                    AutomationProperties.HelpText="Deletes The Selected Cruise"
                    Command="{Binding DeleteSelectedCruiseCommand}"
                    IsEnabled="{Binding SelectedCruise, Converter={StaticResource isNotNullOrEmptyConverter}}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>