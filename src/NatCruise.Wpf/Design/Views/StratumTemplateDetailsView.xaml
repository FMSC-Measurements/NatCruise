<UserControl x:Class="NatCruise.Design.Views.StratumTemplateDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:NatCruise.Design.Views"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800"
             Background="White"
             Tag="Stratum Template">
    <UserControl.Resources>
        <Style TargetType="{x:Type TextBox}"
               BasedOn="{StaticResource {x:Type TextBox}}">
            <Setter Property="Margin"
                    Value="0,0,0,10" />
            <Setter Property="Width"
                    Value="50" />
            <Setter Property="HorizontalAlignment"
                    Value="Left" />
        </Style>

        <Style TargetType="ComboBox"
               BasedOn="{StaticResource {x:Type ComboBox}}">
            <Setter Property="Margin"
                    Value="0,0,0,10" />
        </Style>
    </UserControl.Resources>
    <Grid>
        <WrapPanel>
            <Grid Margin="5">

                <Grid.Resources>
                    <ResourceDictionary>
                        <Style TargetType="{x:Type TextBox}"
                               BasedOn="{StaticResource {x:Type TextBox}}">
                            <Setter Property="Margin"
                                    Value="0,0,0,10" />
                            <Setter Property="Width"
                                    Value="50" />
                            <Setter Property="HorizontalAlignment"
                                    Value="Left" />
                        </Style>
                    </ResourceDictionary>
                </Grid.Resources>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Label Grid.Row="1"
                       Grid.Column="0"
                       Content="Code" />
                <TextBox Grid.Row="1"
                         Grid.Column="1"
                         Text="{Binding StratumDefault.StratumCode}" />

                <Label Grid.Row="0"
                       Content="Profile Name" />

                <TextBox Grid.Row="0"
                         Grid.Column="1"
                         Width="100"
                         Text="{Binding StratumDefault.Description}" />

                <Label Grid.Row="2"
                       Grid.Column="0"
                       Content="Method" />

                <ComboBox Grid.Row="2"
                          Grid.Column="1"
                          SelectedValue="{Binding StratumDefault.Method}"
                          SelectedValuePath="Method"
                          ItemsSource="{Binding Methods}" />

                <Label Grid.Row="5"
                       Content="Yield Component" />

                <ComboBox Grid.Row="5"
                          Grid.Column="1"
                          ToolTip="Yield Component"
                          ItemsSource="{Binding YieldComponentOptions}"
                          SelectedItem="{Binding StratumDefault.YieldComponent, FallbackValue=CL}" />

            </Grid>

            <GroupBox Header="Plot Options"
                      Visibility="{Binding IsPlot, Converter={StaticResource IsVisableConverter}}"
                      Margin="5"
                      VerticalAlignment="Top">
                <Grid>
                    <Grid.Resources>
                        <ResourceDictionary>
                            <Style TargetType="{x:Type TextBox}">
                                <Setter Property="Margin"
                                        Value="0,0,0,10" />
                                <Setter Property="Width"
                                        Value="50" />
                                <Setter Property="HorizontalAlignment"
                                        Value="Left" />
                                <Setter Property="VerticalContentAlignment"
                                        Value="Center" />
                            </Style>
                            <Style TargetType="{x:Type Label}">
                                <Setter Property="HorizontalAlignment"
                                        Value="Right" />
                                <Setter Property="Margin"
                                        Value="0,0,0,10" />
                            </Style>
                        </ResourceDictionary>
                    </Grid.Resources>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <Label Grid.Row="0"
                           Grid.Column="0"
                           Visibility="{Binding IsVariableRariousePlot, Converter={StaticResource IsVisableConverter}}"
                           Content="BAF" />
                    <TextBox Grid.Row="0"
                             Grid.Column="1"
                             ToolTip="Basal Area Factor"
                             Visibility="{Binding IsVariableRariousePlot, Converter={StaticResource IsVisableConverter}}"
                             Text="{Binding StratumDefault.BasalAreaFactor}" />

                    <Label Grid.Row="1"
                           Grid.Column="0"
                           Content="FPS"
                           Visibility="{Binding IsFixedSizePlot, Converter={StaticResource IsVisableConverter}}" />
                    <TextBox Grid.Row="1"
                             Grid.Column="1"
                             ToolTip="Fixed Plot Size"
                             Text="{Binding StratumDefault.FixedPlotSize}"
                             Visibility="{Binding IsFixedSizePlot, Converter={StaticResource IsVisableConverter}}" />

                    <Label Grid.Row="2"
                           Grid.Column="0"
                           Content="KZ (3PPNT)"
                           Visibility="{Binding Is3PPNT, Converter={StaticResource IsVisableConverter}}" />
                    <TextBox Grid.Row="2"
                             Grid.Column="1"
                             ToolTip="KZ (3PPNT)"
                             Text="{Binding StratumDefault.KZ3PPNT}"
                             Visibility="{Binding Is3PPNT, Converter={StaticResource IsVisableConverter}}" />

                    <Label Grid.Column="0"
                           Grid.Row="3"
                           Content="FIXCNT Field"
                           Visibility="{Binding IsFixCNT, Converter={StaticResource IsVisableConverter}}" />
                    <ComboBox Grid.Column="1"
                              Grid.Row="3"
                              Width="100"
                              ItemsSource="{Binding TreeFieldOptions}"
                              SelectedValue="{Binding StratumDefault.FixCNTField}"
                              SelectedValuePath="Field"
                              Visibility="{Binding IsFixCNT, Converter={StaticResource IsVisableConverter}}" />
                </Grid>
            </GroupBox>
        </WrapPanel>

    </Grid>
</UserControl>
