                           BasedOn="{StaticResource MahApps.Styles.TextBox}">
                        <Setter Property="IsReadOnly"
                                Value="True" />
                        <Setter Property="IsEnabled"
                                Value="True" />
                        <Setter Property="mah_ctrls:TextBoxHelper.SelectAllOnFocus"
                                Value="True" />
                        <Setter Property="ToolTip"
