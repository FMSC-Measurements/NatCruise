                    </Style>
                    <Style TargetType="CheckBox"
                           BasedOn="{StaticResource MahApps.Styles.CheckBox}">
                        <Setter Property="IsEnabled"
                                Value="False" />
                    </Style>
                </Style.Resources>
                <Setter Property="LastChildWidth"
