<Window x:Class="NatCruise.Wpf.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="True"
        xmlns:local="clr-namespace:NatCruise.Wpf"
        xmlns:nav="clr-namespace:NatCruise.Wpf.Navigation"
        Icon="{StaticResource image_appIcon}"
        Title="{Binding Title}"
        Height="450"
        Width="800">
    <DockPanel>

        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File">
                <MenuItem Header="New Cruise"
                          Command="{Binding CreateNewFileCommand}" />
                <Separator />
                <MenuItem Header="Open File"
                          Command="{Binding SelectFileCommand}" />
                <MenuItem Header="Open Renent"
                          ItemsSource="{Binding RecentFiles}"
                          Command="{Binding OpenFileInfoCommand}" />

                <MenuItem Header="Exit" />
            </MenuItem>
        </Menu>
        <Grid>
            <ContentControl prism:RegionManager.RegionName="ContentRegion" />
        </Grid>
    </DockPanel>

</Window>
